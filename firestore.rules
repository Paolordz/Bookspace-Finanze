rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profiles: Publicly readable for authenticated users (to see names), writable only by owner
    match /profiles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // User Data (Legacy & Config): Only owner can access
    match /users_data/{userId} {
      allow read, write: if isOwner(userId);
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    match /user_configs/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Shared Data Collections (Transactions, Clients, etc.)
    // Documents must have 'ownerId' field to control access
    match /transactions/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }
    match /clients/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }
    match /providers/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }
    match /employees/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }
    match /leads/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }
    match /invoices/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }
    match /meetings/{docId} {
      allow read, write: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
    }

    // Tasks: Shared collection
    // Readable if user is creator OR is in 'sharedWith' array
    // Writable if user is creator OR is in 'sharedWith' array (for updates)
    match /tasks/{taskId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid || 
        request.auth.uid in resource.data.sharedWith
      );
      allow update: if isAuthenticated() && (
        resource.data.createdBy == request.auth.uid || 
        request.auth.uid in resource.data.sharedWith
      );
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
  }
}
